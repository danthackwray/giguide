
<div class="banner">
  <div class="banner-text">
    <h2>G I G U I D E</h2>
  </div>
</div>

<div class="searchbar">
  <nav class="search_navbar">
    <a href="#" class="nav-link">Genre</a>
    <a href="#" class="nav-link">Event</a>
    <a href="#" class="nav-link">Venues</a>
    <a href="#" class="nav-link">Artist</a>
  </nav>
  <div class="row justify-content-center">
      <div class="col-sm-8">
        <%= form_with url: events_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find an event" %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>
      </div>
  </div>
</div>

<div class="events_banner">
  <h2>UPCOMING EVENTS</h2>
</div>

<div class="event-cards-container">
  <% @events.each do |event|%>
    <div class="event-card">
      <%= image_tag("CAPE.jpg") %>
      <%= event.title %>
    </div>
  <% end %>
</div>
