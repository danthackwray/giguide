<div class="events_banner">
  <h2>ARTISTS</h2>
</div>

<div class="searchbar">
  <%= form_with url: root_path, method: :get, class: "d-flex w-50" do %>
    <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for artists..." %>
    <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="artist-cards-container">
  <% @artists.each do |artist| %>
    <%= link_to artist_path(artist) do %>
      <div class="artist-card">
        <%# <%= cl_image_tag event.photo.key %>
        <%= artist.name %>
      </div>
    <% end %>
  <% end %>
</div>
