<p style="color: green"><%= notice %></p>

<h1>Artists</h1>

<div id="artists">
  <% @artists.each do |artist| %>
    <%= artist.name %>
    <p>
      <%= link_to 'Add to Event', event_artists_path(event_id: session[:event_id], artist_id: artist.id), method: :post %>
      <%= link_to "Show this artist", artist %>
    </p>
  <% end %>
</div>

<%= link_to "New artist", new_artist_path %>
