<div class="container-artist-show">
  <div class="navbar">
    <h1>Navbar</h1>
  </div>

  <div class="name-banner-artist-show">
    <%= @artist.name %>
  </div>

  <div class="artist-info">

    <div class="artist-info-img">
      <img src="https://github.com/danthackwray/giguide/blob/master/RANDOM%20BAND%20PHOTO.jpg?raw=true" alt="Artist Photo">
    </div>

    <h3>Artist Info</h3>
    <div id="<%= dom_id @artist %>">
      <p>
        <strong>User:</strong>
        <%= @artist.user_id %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @artist.name %>
      </p>

      <p>
        <strong>Genre:</strong>
        <%= @artist.genre %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @artist.description %>
      </p>

      <p>
        <strong>Website:</strong>
        <%= @artist.website %>
      </p>
    </div>
    <div>
      <%= link_to "Edit this artist", edit_artist_path(@artist) %> |
      <%= link_to "Back to artists", artists_path %>
      <%= button_to "Destroy this artist", @artist, method: :delete %>
    </div>
  </div>
</div>

<div class="footer">
  <p>Footer</p>
</div>
